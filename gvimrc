" Load Editor Settings
source ~/.vim/startup/GUIsettings.vim
source ~/.vim/startup/Formatsettings.vim
source ~/.vim/startup/Generalsettings.vim
" Load Mappings and Autocommands
source ~/.vim/startup/mappings.vim
source ~/.vim/startup/autocommands.vim


" " syntax highlighting on
" syntax on
"
" " colorscheme twilight
"
" " font
" " set guifont=Menlo\ Regular:h14
"
" " auto indent
" set ai
"
" " show line numbers
" set nu
"
" " tabs should be four spaces
" set ts=4
"
" " do not put a cr at the end of the file. this will result in headers sent if you do web programming
" set binary noeol
"
" " highlighting search results is annoying
" set nohlsearch
"
" " show matching brackets
" set showmatch
"
" " make that backspace key work the way it should
" set backspace=indent,eol,start
"
" " make the last line where the status is two lines deep so you can see status always
" set laststatus=2
"
" " vi compatible is LAME
" set nocompatible
"
" " no bell, please
" set vb
"
" " set the screen width and height
" win 85 240